@model ClientManagementSystem.UI.ClientManagementServiceReference.Client

@{
    ViewBag.Title = "Delete Client";
}

<h2>Delete Client</h2>

<h3>Are you sure you want to delete this client?</h3>
<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <hr />

    @using (Html.BeginForm("DeleteConfirmed", "Client", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m=>m.ClientId)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
